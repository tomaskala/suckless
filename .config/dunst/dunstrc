[global]
# What determines the focused monitor.
follow = keyboard

# Defines width in pixels of frame around the notification window.
frame_width = 1
frame_color = "#1a1c25"

# Font settings.
font = Monospace 10

# Launcher path.
dmenu = ~/.local/bin/i3-launcher

# Browser for opening URLs in context menu.
browser = /usr/bin/firefox

# Define settings common to all urgency levels.
foreground = "#bbc2cf"
timeout = 10

[urgency_low]
background = "#1e2029"

[urgency_normal]
background = "#21242b"

[urgency_critical]
background = "#cc6666"
foreground = "#1e2029"
timeout = 0
