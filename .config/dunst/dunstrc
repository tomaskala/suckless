[global]
# What determines the focused monitor.
follow = keyboard

# Defines width in pixels of frame around the notification window.
frame_width = 1
frame_color = "#3b4261"
separator_color = "#3b4261"

# Font settings.
font = Monospace 10

# Launcher path.
dmenu = /usr/bin/rofi -dmenu

# Browser for opening URLs in context menu.
browser = /usr/bin/firefox

# Define settings common to all urgency levels.
foreground = "#bbc2cf"
timeout = 10

[urgency_low]
background = "#222436"
foreground = "#c3e88d"

[urgency_normal]
background = "#222436"
foreground = "#828bb8"

[urgency_critical]
background = "#222436"
foreground = "#ff757f"
