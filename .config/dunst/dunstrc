[global]
# What determines the focused monitor.
follow = keyboard

# Defines width in pixels of frame around the notification window.
frame_width = 2

# Font settings.
font = Monospace 10

# Launcher path.
dmenu = ~/.local/bin/i3-launcher

# Browser for opening URLs in context menu.
browser = /usr/bin/firefox

# Defines color of the frame around the notification window.
frame_color = "#aaaaaa"

[urgency_low]
background = "#222222"
foreground = "#888888"
timeout = 10

[urgency_normal]
background = "#285577"
foreground = "#ffffff"
timeout = 10

[urgency_critical]
background = "#900000"
foreground = "#ffffff"
frame_color = "#ff0000"
timeout = 0
