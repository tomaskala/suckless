[global]
# What determines the focused monitor.
follow = keyboard

# Defines width in pixels of frame around the notification window.
frame_width = 2

# Font settings.
font = Monospace 10

# Launcher path.
dmenu = ~/.local/bin/i3-launcher

# Browser for opening URLs in context menu.
browser = /usr/bin/firefox

# Define settings common to all urgency levels.
background = "#0c0c0c"
foreground = "#cccccc"
frame_color = "#3b78ff"
timeout = 10

[urgency_critical]
background = "#e74856"
foreground = "#0c0c0c"
frame_color = "#c50f1f"
timeout = 0
